<%- include("partials/header") %>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="title" name="postTitle" class="form-control" id="postTitle" required>
        </div>
        <div class="form-group">
            <label for="postBody">Post</label>
            <textarea type="text" name="postBody" class="form-control" id="postBody" rows="5" cols="30" required></textarea>
        </div>
        <button type="submit" class="btn" style="color: white; background-color: #1abc9c;">Publish</button>
    </form>

    <%- include("partials/footer") %>